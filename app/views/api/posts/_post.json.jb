# json.extract! post, :id, :title, :created_at, :genre, :status, :user_id, :username
{
  id: post.id,
  title: post.title,
  genre: post.genre,
  user: post.user,
  username: post.user && post.user.username,
  status: post.status,
  created_at: post.created_at,
  likes: post.likes,
  comments: post.comments
}
